packages:
  dnf:
    python3-devel: []
    gcc: []
    postgresql15-devel: []

option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: "config.settings.production"
    PYTHONPATH: "/var/app/current:$PYTHONPATH"
  aws:elasticbeanstalk:container:python:
    WSGIPath: "config.wsgi:application"

container_commands:
  00_update_path:
    command: "echo 'export PATH=$PATH:/usr/pgsql-15/bin' >> /etc/profile"
  00_update_pip:
    command: "source /var/app/venv/*/bin/activate && pip install --upgrade pip"
  01_dnf_update:
    command: "sudo dnf update -y"
  02_install_postgresql:
    command: "sudo dnf install postgresql15.x86_64 postgresql15-server postgresql15-devel -y"
  03_install_requirements:
    command: "source /var/app/venv/*/bin/activate && pip install -r requirements.txt"
  04_makemigrations:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py makemigrations --noinput"
    leader_only: true
  05_migrate:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py migrate --noinput"
    leader_only: true
  06_collectstatic:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py collectstatic --noinput"
    leader_only: true
  07_compilemessages:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py compilemessages"
    leader_only: true
